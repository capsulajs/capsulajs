{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  }
}